<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Monitoring Dashboard</title>

    <!-- CSS (load bootstrap from a CDN) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>

<body class="container">
<main>
    <div>
        <div class="card">
            <div class="card-header" id="headingOne">
                <h4 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Monitoring Dashboard
                    </button>
                </h4>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">IP address</th>
                            <th scope="col">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% data.forEach(function(row, index) { %>
                            <tr>
                                <th scope="row">
                                    <% if(row.name !== "Unknown") { %>
                                        <span class="text-primary"><%= index + 1 %></span>
                                    <% } else { %>
                                        <span class="text-danger"><%= index + 1 %></span>
                                    <% } %>
                                </th>
                                <td>
                                    <% if(row.name !== "Unknown") { %>
                                        <span class="text-primary"><%= row.name %></span>
                                    <% } else { %>
                                        <span class="text-danger"><%= row.name %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(row.name !== "Unknown") { %>
                                        <span class="text-primary"><%= row.ip %></span>
                                    <% } else { %>
                                        <span class="text-danger"><%= row.ip %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <h4 class="mb-0">
                                        <% if(row.status === true) { %>
                                            <span class="badge badge-pill badge-success">ON</span>
                                        <% } else { %>
                                            <span class="badge badge-pill badge-danger">OFF</span>
                                        <% } %>
                                    </h4>
                                </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</main>

<footer class="mt-3">
    <p class="text-center text-muted">&copy; Copyright 2021 Team-4</p>
</footer>
</body>
</html>